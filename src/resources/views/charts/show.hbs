<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-5 mr-5">
            <div class="chart-container" style="width:600px;height:300px;background-color: rgba(21, 223, 179, 0.3);">
                <canvas id="myChart" width="600" height="300"></canvas>
            </div>
        </div>
        <div class="col-5">
            <div class="chart-container" style="width:400px;height:300px;background-color: rgba(21, 93, 226, 0.9);">
                <canvas id="humiChart" width="400" height="300"></canvas>
            </div>
        </div>
    </div>
    <div class="row mt-4 justify-content-center">
        <div class="chart-container" style="width:600px;height:250px;background-color: rgba(3, 238, 168, 0.9);">
            <canvas id="luxChart" width="600" height="250"></canvas>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js@3.3.2"></script>
<script src="https://cdn.jsdelivr.net/npm/luxon@1.27.0"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon@1.0.0"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-streaming@2.0.0"></script>
